@model WnT.Web.Models.DTO.RegionDTO

<h1 class="mt-3 mb-4">Edit Region</h1>

<div class="container mx-lg-5">
    @if(Model is not null)
    {
        <form method="post">
            <div class="form-group mb-3">
                <label class="form-label">Region Id</label>
                <input type="text" class="form-control" placeholder="Region Id" asp-for="Id" readonly>
            </div>
            <div class="form-group mb-3">
                <label class="form-label">Region Code</label>
                <input type="text" class="form-control" placeholder="Enter Region Code" asp-for="Code">
            </div>
            <div class="form-group mb-3">
                <label class="form-label">Region Name</label>
                <input type="text" class="form-control" placeholder="Enter Region Name" asp-for="Name">
            </div>
            <div class="form-group mb-3">
                <label class="form-label">Region Image URl</label>
                <input type="text" class="form-control" placeholder="Enter Region Image URL" asp-for="RegionImageUrl">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    }
</div>

