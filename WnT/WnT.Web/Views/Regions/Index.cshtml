@model IEnumerable<WnT.Web.Models.DTO.RegionDTO>


<h1 class="mt-3 mb-4">Regions</h1>

<div class="d-flex justify-content-end my-3">
    <a class="btn btn-primary" asp-controller="Regions" asp-action="add">Add</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark text-center">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Delete/Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row" class="text-center align-middle">@item.Id</td>
                    <td class="align-middle text-center">@item.Code</td>
                    <td class="align-middle text-center">@item.Name</td>
                    <td class="align-middle text-center"><a href=@item.RegionImageUrl target="_blank">image</a></td>
                    <td class="text-center align-middle">
                        <div class="d-flex justify-content-center">                                                           
                            <a class="btn btn-primary mx-2" asp-controller="Regions" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            <a class="btn btn-primary mx-2" asp-controller="Regions" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
