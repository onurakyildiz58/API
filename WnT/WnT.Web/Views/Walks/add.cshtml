@model WnT.Web.Models.DTO.AddWalkViewModel

<h1 class="mt-3 mb-4">Add Walk</h1>

<div class="container mx-lg-5">
    <form method="post">
        <div class="form-group mb-3">
            <label class="form-label">Walk Name</label>
            <input type="text" class="form-control" placeholder="Enter Walk Name" asp-for="Walk.Name">
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Walk Description</label>
            <input type="text" class="form-control" placeholder="Enter Walk Description" asp-for="Walk.Description">
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Walk Length</label>
            <input type="text" class="form-control" placeholder="Enter Walk Length" asp-for="Walk.LengthInKM">
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Walk Image URl</label>
            <input type="text" class="form-control" placeholder="Enter Walk Image URL" asp-for="Walk.WalkImageUrl">
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Walk Region</label>
            <select class="form-control" name="Walk.Region.Id" asp-for="Walk.Region.Id">
                <option selected>Choose...</option>
                @foreach (var item in Model.AvailableRegions)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Walk Difficulty</label>
            <select class="form-control" name="Walk.Difficulty.Id" asp-for="Walk.Difficulty.Id">
                <option selected>Choose...</option>
                <option value="F808DDCD-B5E5-4D80-B732-1CA523E48434">Easy</option>
                <option value="54466F17-02AF-48E7-8ED3-5A4A8BFACF6F">Medium</option>
                <option value="EA294873-7A8C-4C0F-BFA7-A2EB492CBF8C">Hard</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
