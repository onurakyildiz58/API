@model IEnumerable<WnT.Web.Models.DTO.WalkDTO>
@{
    var currentPage = ViewBag.CurrentPage;
}

<h1 class="mt-3 mb-4">Walks</h1>

<div class="d-flex justify-content-end my-3">
    <a class="btn btn-primary" asp-controller="Walks" asp-action="add">Add</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark text-center">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Length</th>
                <th scope="col">Image</th>
                <th scope="col">Region Name</th>
                <th scope="col">Difficulty</th>
                <th scope="col">Delete/Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row" class="text-center align-middle">@item.Id</td>
                    <td class="align-middle text-center">@item.Name</td>
                    <td class="align-middle text-center text-wrap" style="max-width: 300px;">@item.Description</td>
                    <td class="align-middle text-center">@item.LengthInKM</td>
                    <td class="align-middle text-center"><a href=@item.WalkImageUrl target="_blank">image</a></td>
                    <td class="align-middle text-center">@item.Region.Name</td>
                    <td class="align-middle text-center">@item.Difficulty.Name</td>
                    <td class="text-center align-middle">
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-primary mx-2" asp-controller="Walks" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            <a class="btn btn-primary mx-2" asp-controller="Walks" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-around my-3">
    <a class="btn btn-primary" href="@Url.Action("Index", new { pageParam = currentPage - 1 })" role="button">PREV</a>
    <a class="btn btn-primary" href="@Url.Action("Index", new { pageParam = currentPage + 1 })" role="button">NEXT</a>
</div>
